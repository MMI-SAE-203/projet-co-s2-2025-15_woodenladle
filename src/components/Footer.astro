---
import facebookUrl from "../assets/icons/facebook.svg?url";
import xUrl from "../assets/icons/x.svg?url";
import linkedinUrl from "../assets/icons/linkdin.svg?url";
import instaUrl from "../assets/icons/insta.svg?url";
import ytUrl from "../assets/icons/yt.svg?url";
---

<footer class="bottom-0 bg-gray-100 border-t-2 w-full">
    <!-- Version Mobile (< lg) -->
    <div class="lg:hidden px-6 py-8 space-y-8">
        <!-- Logo centré -->
        <div class="text-center">
            <a href="/" class="pointer font-lilitaone text-2xl sm:text-3xl text-black">
                SAVOURY ROAD
            </a>
        </div>

        <!-- Sections en colonnes sur mobile -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
            <!-- Nos services -->
            <div class="space-y-3">
                <p class="font-lilitaone text-lg text-black uppercase text-center sm:text-left">
                    Nos services
                </p>
                <ul class="space-y-2 text-center sm:text-left">
                    <li>
                        <a
                            class="font-montserrat text-sm text-black hover:text-gray-600 transition-colors"
                            href="/produits">Nos produits</a>
                    </li>
                    <li>
                        <a
                            class="font-montserrat text-sm text-black hover:text-gray-600 transition-colors"
                            href="/recettes">Les recettes simples</a>
                    </li>
                    <li>
                        <a 
                            class="font-montserrat text-sm text-black hover:text-gray-600 transition-colors" 
                            href="/chat">SR Bot</a>
                    </li>
                </ul>
            </div>

            <!-- Autre -->
            <div class="space-y-3">
                <p class="font-lilitaone text-lg text-black uppercase text-center sm:text-left">
                    Autre
                </p>
                <ul class="space-y-2 text-center sm:text-left">
                    <li>
                        <a
                            class="font-montserrat text-sm text-black hover:text-gray-600 transition-colors"
                            href="/mentionlegale">Mentions légales</a>
                    </li>
                    <li>
                        <a 
                            class="font-montserrat text-sm text-black hover:text-gray-600 transition-colors" 
                            href="/propos">À propos</a>
                    </li>
                    <li>
                        <a
                            class="font-montserrat text-sm text-black hover:text-gray-600 transition-colors"
                            href="/contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Réseaux sociaux centrés -->
        <div class="space-y-3">
            <p class="font-lilitaone text-lg text-black uppercase text-center">
                Rejoignez-nous
            </p>
            <ul class="flex justify-center gap-6">
                <li>
                    <a 
                        href="https://facebook.com" 
                        target="_blank" 
                        rel="noopener"
                        class="hover:scale-110 transition-transform"
                    >
                        <img src={facebookUrl} alt="Facebook" class="w-7 h-7" />
                    </a>
                </li>
                <li>
                    <a 
                        href="https://twitter.com" 
                        target="_blank" 
                        rel="noopener"
                        class="hover:scale-110 transition-transform"
                    >
                        <img src={xUrl} alt="X (Twitter)" class="w-7 h-7" />
                    </a>
                </li>
                <li>
                    <a 
                        href="https://linkedin.com" 
                        target="_blank" 
                        rel="noopener"
                        class="hover:scale-110 transition-transform"
                    >
                        <img src={linkedinUrl} alt="LinkedIn" class="w-7 h-7" />
                    </a>
                </li>
                <li>
                    <a 
                        href="https://instagram.com" 
                        target="_blank" 
                        rel="noopener"
                        class="hover:scale-110 transition-transform"
                    >
                        <img src={instaUrl} alt="Instagram" class="w-7 h-7" />
                    </a>
                </li>
                <li>
                    <a 
                        href="https://youtube.com" 
                        target="_blank" 
                        rel="noopener"
                        class="hover:scale-110 transition-transform"
                    >
                        <img src={ytUrl} alt="YouTube" class="w-7 h-7" />
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Version Desktop (>= lg) -->
    <div class="hidden lg:flex items-center justify-around h-[200px] px-10">
        <!-- Logo -->
        <div>
            <a href="/" class="pointer font-lilitaone text-4xl text-black hover:text-gray-600 transition-colors">
                SAVOURY ROAD
            </a>
        </div>

        <!-- Nos services -->
        <div class="space-y-4">
            <p class="font-lilitaone text-2xl text-black uppercase">Nos services</p>
            <ul class="space-y-2">
                <li>
                    <a
                        class="font-montserrat text-[16px] text-black hover:text-gray-600 transition-colors"
                        href="/produits">Nos produits</a>
                </li>
                <li>
                    <a
                        class="font-montserrat text-[16px] text-black hover:text-gray-600 transition-colors"
                        href="/recettes">Les recettes simples</a>
                </li>
                <li>
                    <a 
                        class="font-montserrat text-[16px] text-black hover:text-gray-600 transition-colors" 
                        href="/chat">SR Bot</a>
                </li>
            </ul>
        </div>

        <!-- Autre -->
        <div class="space-y-4">
            <p class="font-lilitaone text-2xl text-black uppercase">Autre</p>
            <ul class="space-y-2">
                <li>
                    <a
                        class="font-montserrat text-[16px] text-black hover:text-gray-600 transition-colors"
                        href="/mentionlegale">Mentions légales</a>
                </li>
                <li>
                    <a 
                        class="font-montserrat text-[16px] text-black hover:text-gray-600 transition-colors" 
                        href="/propos">À propos</a>
                </li>
                <li>
                    <a
                        class="font-montserrat text-[16px] text-black hover:text-gray-600 transition-colors"
                        href="/contact">Contact</a>
                </li>
            </ul>
        </div>

        <!-- Réseaux sociaux -->
        <div class="space-y-4">
            <p class="font-lilitaone text-2xl text-black uppercase">
                Rejoignez-nous
            </p>
            <ul class="flex gap-4">
                <li>
                    <a 
                        href="https://facebook.com" 
                        target="_blank" 
                        rel="noopener"
                        class="hover:scale-110 transition-transform"
                    >
                        <img src={facebookUrl} alt="Facebook" class="w-6 h-6" />
                    </a>
                </li>
                <li>
                    <a 
                        href="https://twitter.com" 
                        target="_blank" 
                        rel="noopener"
                        class="hover:scale-110 transition-transform"
                    >
                        <img src={xUrl} alt="X (Twitter)" class="w-6 h-6" />
                    </a>
                </li>
                <li>
                    <a 
                        href="https://linkedin.com" 
                        target="_blank" 
                        rel="noopener"
                        class="hover:scale-110 transition-transform"
                    >
                        <img src={linkedinUrl} alt="LinkedIn" class="w-6 h-6" />
                    </a>
                </li>
                <li>
                    <a 
                        href="https://instagram.com" 
                        target="_blank" 
                        rel="noopener"
                        class="hover:scale-110 transition-transform"
                    >
                        <img src={instaUrl} alt="Instagram" class="w-6 h-6" />
                    </a>
                </li>
                <li>
                    <a 
                        href="https://youtube.com" 
                        target="_blank" 
                        rel="noopener"
                        class="hover:scale-110 transition-transform"
                    >
                        <img src={ytUrl} alt="YouTube" class="w-6 h-6" />
                    </a>
                </li>
            </ul>
        </div>
    </div>
</footer>